<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.RadioButton?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" prefHeight="500" prefWidth="500">
    <VBox spacing="20">
        <HBox spacing="10" alignment="TOP_CENTER">
            <Button fx:id="button1" onAction="#onClick"  text="Clear" prefWidth="100" prefHeight="20"/>
            <Button fx:id="button" onAction="#onClick_1"  text="Push" prefWidth="100" prefHeight="20"/>
            <TableView fx:id="table" prefHeight="200" prefWidth="400">
                <columns>
                    <TableColumn fx:id="number" prefWidth="100"  text="№"/>
                    <TableColumn fx:id="name" prefWidth="100" text="имя модуля"/>
                    <TableColumn fx:id="modules" prefWidth="200" text="прикреплённый модуль"/>
                </columns>
            </TableView>
        </HBox>
        <Button fx:id="button2" onAction="#onClick_2"  text="Add" prefWidth="100" prefHeight="20"/>
        <HBox alignment="BOTTOM_CENTER">
            <TextField fx:id="textField" alignment="BOTTOM_CENTER"/>
        </HBox>
        <HBox spacing="10">
            <RadioButton text=".java" fx:id = "javaButton" onAction="#clickRb1"/>
            <RadioButton text=".fxml" fx:id = "fxmlButton" onAction="#clickRb2" />
        </HBox>
    </VBox>
</GridPane>